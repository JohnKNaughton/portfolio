<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>D3 Bar Chart</title>
  <script src="https://d3js.org/d3.v7.min.js"></script>
</head>
<body>
  <svg id="chart" width="500" height="300"></svg>

  <script>
    const data = [10, 30, 50, 20, 40];

const width = 500;
const height = 300;
const barWidth = width / data.length;

const svg = d3.select("#chart");

// Create a scale to convert data → height
const yScale = d3.scaleLinear()
  .domain([0, d3.max(data)])   // input range (min → max of dataset)
  .range([height, 0]);         // output range (bottom → top)

// Draw bars
svg.selectAll("rect")
  .data(data)
  .enter()
  .append("rect")
  .attr("x", (d, i) => i * barWidth)
  .attr("y", d => yScale(d))
  .attr("width", barWidth - 5)
  .attr("height", d => height - yScale(d))
  .attr("fill", "steelblue");

  </script>
</body>
</html>
